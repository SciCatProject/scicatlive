{
  "ldap": {
    "provider": "ldap",
    "authScheme": "ldap",
    "module": "passport-ldapauth",
    "authPath": "/auth/msad",
    "successRedirect": "/auth/account",
    "failureRedirect": "/msad",
    "session": true,
    "json": true,
    "failureFlash": true,
    "profileAttributesFromLDAP": {
      "displayName": "displayName",
      "email": "mail"
    },
    "server": {
      "url": "ldap://ldap:3893",
      "bindDn": "cn=scicatlive-svc,ou=svc-acc,dc=facility",
      "bindCredentials": "mysecret",
      "searchBase": "dc=facility",
      "searchFilter": "(uid={{username}})"
    }
  }
}
